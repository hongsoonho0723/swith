<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sportsmania.swith.mapper.MatchBoardMapper">



    <select id="getTime" resultType="String">
        select now()
    </select>


    <select id="selectAll" resultType="com.sportsmania.swith.domain.MatchBoardVO">
        select * from matchboard where board_no = #{board_no}
    </select>

    <select id="selectList" resultType="com.sportsmania.swith.dto.MatchBoardDTO">
        select board_no
        , board_writer as board_writer
        , exercise as exercise
        , startdate as startdate
        , enddate as enddate
        , (DATE_SUB(startdate,interval 1 hour)) as deadline
        , region as region
        , recruitsNum as recruitsNum
        , title as title
        , content as content
        , b_category as b_category
        , finished as finished
        , regdate as regdate
        , clicks as clicks
        , sportsfacility as sportsfacility
        , supporttype as supporttype
        from matchboard
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=")" separator="OR">
                    <if test="type == 't'.toString()">
                        title like concat('%',#{keyword},'%')
                    </if>
                    <if test="type == 'w'.toString()">
                        writer like concat('%',#{keyword},'%')
                    </if>
                </foreach>
            </if>
        </where>
        order by board_no desc limit #{skip},#{size}
    </select>
    <select id="getCount" resultType="int">
        select count(board_no) from matchboard
    </select>



    <insert id="insert" parameterType="com.sportsmania.swith.domain.MatchBoardVO">
        insert into matchboard(board_writer,exercise,startdate,enddate,region,recruitsNum,title,content,b_category,sportsfacility,supporttype)
        values(#{board_writer},#{exercise},#{startdate},#{enddate},#{region},#{recruitsNum},#{title},#{content},#{b_category},#{sportsfacility},#{supporttype})
    </insert>


    <update id="update" parameterType="com.sportsmania.swith.domain.MatchBoardVO">
        update matchboard set exercise =#{exercise},startdate=#{startdate},enddate=#{enddate},region=#{region},recruitsNum=#{recruitsNum},title=#{title},sportsfacility=#{sportsfacility},supporttype=#{supporttype} where board_no =#{board_no}


    </update>


    <select id="selectOne" resultType="com.sportsmania.swith.domain.MatchBoardVO">
        select *from matchboard where board_no = #{board_no}
    </select>

    <delete id="delete">
        delete from matchboard where board_no = #{board_no}
    </delete>




</mapper>
